{
    "name": "hossam-tarek/laravel-notification-manager",
    "description": "Flexible Laravel package for managing multi-language notifications with dynamic content and customizable channels.",
    "keywords": [
        "Hossam Tarek",
        "laravel",
        "laravel notification",
        "laravel notification manager",
        "notification manager"
    ],
    "homepage": "https://github.com/hossam-tarek/laravel-notification-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Hossam Tarek",
            "email": "hossamtarek250@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^8.0",
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "HossamTarek\\NotificationManager\\": "src/",
            "HossamTarek\\NotificationManager\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HossamTarek\\NotificationManager\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-notification-manager --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "HossamTarek\\NotificationManager\\NotificationManagerServiceProvider"
            ],
            "aliases": {
                "NotificationManager": "HossamTarek\\NotificationManager\\Facades\\NotificationManager"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
